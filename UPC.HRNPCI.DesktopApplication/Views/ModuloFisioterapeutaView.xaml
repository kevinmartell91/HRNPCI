    <Window.Resources>
        <DataTemplate x:Key="FisioterapeutaTestAnalisis">
            <v1:FisioterapeutaTestAnalisisView/>
        </DataTemplate>
    </Window.Resources>
    <Grid Width="Auto" Height="Auto"  Margin="0,0,0,1" >
